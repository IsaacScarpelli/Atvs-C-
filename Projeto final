                    break;

                    case 2:
                    Console.WriteLine("Insira o Id da sua conta :");
                    id = int.Parse(Console.ReadLine());
                    Console.WriteLine("Você deseja realizar um deposito inicial ? (Digite 1 para sim/ Digite 2 para não)");
                    escolha = int.Parse(Console.ReadLine());
                    if (escolha == 1)
