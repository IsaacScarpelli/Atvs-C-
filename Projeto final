using System;
using System.Drawing;
using System.Runtime.InteropServices;
using System.Security.Cryptography.X509Certificates;

public class Conta
{
    public int Id;
    public double Carteira { get; protected set; }
    public double Divida { get; protected set; }


    public Conta()
    {
        
    }


    public Conta(int id)
    {
        this.Id = id;
        this.Carteira = 0;
        this.Divida = 0;
    }

    public void Deposito(double valor)
    {
        Carteira += valor;
        Console.WriteLine($"Depósito de R${valor} realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void Saque(double valor)
    {
        Carteira -= valor;
        Console.WriteLine($"Saque de R${valor} realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void PagarDividas()
    {
        if( Divida <= Carteira )
        {
            Carteira -= Divida;
            Divida = 0;
            Console.WriteLine("Pagamento de divídas realizado!");
            Console.ReadKey();
            Console.Clear();
        }
        else if( Divida > Carteira )
        {
            Console.WriteLine("Você não possui saldo sufiente para pagar as divídas!");
            Console.ReadKey();
            Console.Clear();
        }
    }

    public override string ToString()
    {
        return "Id da conta: " + Id + ", Saldo na carteira: " + Carteira + ", Valor de divídas pendentes: " + Divida;
        Console.ReadKey();
        Console.Clear();
    }
}

public class ContaSilver : Conta
{
    public double LimiteEmprestimo;


    public ContaSilver()
        
    {
       
    }


    public ContaSilver(int id)
        :base(id)  
    {
        LimiteEmprestimo = 1000;

    }

    public void Deposito(double valor)
    {
        Carteira += valor;

        Console.WriteLine($"Depósito de R${valor} realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void Saque(double valor)
    {
        Carteira -= valor;
        Console.WriteLine($"Saque de R${valor} realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void Emprestimo(double valor)
    {
        Carteira += valor;
        Divida = Divida + valor + (valor * 0.1);
        Console.WriteLine("Empréstimo realizado!");
        Console.ReadKey();
        Console.Clear();

    }

    public void PagarDividas()
    {
        if (Divida <= Carteira)
        {
            Carteira -= Divida;
            Divida = 0;
            Console.WriteLine("Pagamento de divídas realizado!");
            Console.ReadKey();
            Console.Clear();
        }
        else if (Divida > Carteira)
        {
            Console.WriteLine("Você não possui saldo sufiente para pagar as divídas!");
            Console.ReadKey();
            Console.Clear();
        }
    }

    public override string ToString()
    {
        return "Id da conta: " + Id + ", Saldo na carteira: " + Carteira + ", Valor de divídas pendentes: " + Divida;
        Console.ReadKey();
        Console.Clear();
    }

}

public class ContaGold : Conta
{
    public double LimiteEmprestimo;


    public ContaGold()

    {

    }

    public ContaGold(int id)
        : base(id)
    {
        LimiteEmprestimo = 5000;

    }

    public void Deposito(double valor)
    {
        Carteira += valor;
        Console.WriteLine($"Depósito de R${valor} realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void Saque(double valor)
    {
        Carteira -= valor;
        Console.WriteLine($"Saque de R${valor} realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void Emprestimo(double valor)
    {
        Carteira += valor;
        Divida = Divida + valor + (valor * 0.1);
        Console.WriteLine("Empréstimo realizado!");
        Console.ReadKey();
        Console.Clear();
    }

    public void PagarDividas()
    {
        if (Divida <= Carteira)
        {
            Carteira -= Divida;
            Divida = 0;
            Console.WriteLine("Pagamento de divídas realizado!");
            Console.ReadKey();
            Console.Clear();
        }
        else if (Divida > Carteira)
        {
            Console.WriteLine("Você não possui saldo sufiente para pagar as dívidas!");
            Console.ReadKey();
            Console.Clear();
        }
    }

    public override string ToString()
    {
        return "Id da conta: " + Id + ", Saldo na carteira: " + Carteira + ", Valor de divídas pendentes: " + Divida;
        Console.ReadKey();
        Console.Clear();
    }

}






